    }

    .tax-toggle {
        border: 0.1px solid rgb(181, 181, 181);
        border-radius: 1rem;
        height: 3rem;
        padding: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 0.25rem;
    }

    .tax-toggle:hover{
        border: 1px solid rgb(10, 10, 10);
    }

    .listing-card {
        margin-bottom: 2rem;
        border: none;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s;
    }

    .listing-card:hover {
        transform: scale(1.02);
    }

    .card-body p {
        margin: 0.5rem 0 0 0;
    }

    .slider{
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        gap:0.5rem;
        border: 0.1px solid rgb(181, 181, 181);
        border-radius: 1rem;
        height: 3rem;
        /* padding-top: 0.6rem; */
        padding-left: 0.85rem;
        padding-right: 0.85rem;
        margin-bottom: 0.25rem;
        margin-left: 3.4rem;
        cursor: pointer;
        transition: all 0.2s ease-in-out;
    }

    .slider:hover {
      background-color: #f7f7f7;
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
      border: 1px solid rgb(10, 10, 10);
    }


    /*styling for pop up window */

