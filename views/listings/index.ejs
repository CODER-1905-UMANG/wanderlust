    .filter {
        text-align: center;
        opacity: 0.7;
        transition: opacity 0.2s ease-in-out;
        margin-top: 0.25rem;
    }

    .filter:hover {
        opacity: 1;
        cursor: pointer;
    }

    .filter p {
        font-size: 0.8rem;
